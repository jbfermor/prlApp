<div class="row">
	<%= form_with model: @informe, url: empresa_informes_path(@empresa),
	method: :post do |form| %>

	  <div class="field">
	    <%= form.label "Tipo de informe", class:"form-label" %>
	    <%= form.select :tipo, options_for_select(@tipoInforme),
			{},	{class:"form-select"} %>
	  </div>

	  <div class="field">
	    <%= form.label "Ciudad de firma", class:"form-label" %>
	    <%= form.text_field :ciudadFirma, class:"form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label "Fecha de firma", class:"form-label" %>
	    <%= form.date_field :fechaFirma, class:"form-control" %>
	  </div>

	  <div class="actions">
	    <%= form.submit "Crear informe", class: "btn btn-success" %>
	  </div>
	<% end %>
</div>
