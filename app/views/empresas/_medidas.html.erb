<div class="row">
	<div class="accordion-item">
		<h2 class="accordion-header" id="headingMedidas">
			<button class="accordion-button collapsed" type="button"
			data-bs-toggle="collapse" data-bs-target="#collapseMedidas"
			aria-expanded="false" aria-controls="collapseMedidas">
				Medidas de emergencia
			</button>
		</h2>
		<div id="collapseMedidas" class="accordion-collapse collapse"
		aria-labelledby="headingMedidas" data-bs-parent="#accordionEmpresaDos">
			<div class="accordion-body">
				<table>
					<thead>
						<tr>
							<td colspan="12">
								Centros
							</td>
						</tr>
					</thead>
					<tbody>
						<% @centros_m.each do |c| %>
							<% if c.medida %>
								<tr>
									<td colspan="10"><%= c.nombre %></td>
									<td colspan="2"><%= link_to mi.visibility.style("color: blue"),
										 edit_medida_path, title: "Ver Medidas de Emergencia" %></td>
								</tr>
							<% else %>
								<tr>
									<td colspan="10"><%= c.nombre %></td>
									<td colspan="2"><%= link_to mi.trending_up,
										new_centro_medida_path(c), title: "Crear Medidas de Emergencia" %></td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
