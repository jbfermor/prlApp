<div class="row">
	<%= form_with(model: empresa) do |form| %>
	  <% if empresa.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(empresa.errors.count, "error") %> prohibited this empresa from being saved:</h2>

	      <ul>
	        <% empresa.errors.each do |error| %>
	          <li><%= error.full_message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <div class="field">
	    <%= form.label :razon_social, class: "form-label" %>
	    <%= form.text_field :razon_social, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :cif, class: "form-label" %>
	    <%= form.text_field :cif, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :direccion, class: "form-label" %>
	    <%= form.text_field :direccion, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :poblacion, class: "form-label" %>
	    <%= form.text_field :poblacion, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :provincia, class: "form-label" %>
	    <%= form.text_field :provincia, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :cp, class: "form-label" %>
	    <%= form.number_field :cp, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :telefono, class: "form-label" %>
	    <%= form.number_field :telefono, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label :email, class: "form-label" %>
	    <%= form.text_field :email, class: "form-control" %>
	  </div>

	  <div class="field">
	    <%= form.label "¿Tiene algún trabajador en centros de trabajo ajenos?",
			 class: "form-label" %>
			<%= form.select :t_fuera, options_for_select(@t_fuera_select), {}, 
			{:class => "form-select"} %>

	  </div>

	  <div class="actions">
	    <%= form.submit "Guardar empresa", class: "btn btn-dark" %>
	  </div>

	<% end %>
</div>
