
<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>Razon social</th>
      <th>Cif</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.razon_social %></td>
        <td><%= empresa.cif %></td>
        <td><%= link_to 'Mostrar', empresa %></td>
        <td><%= link_to 'Editar', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Eliminar', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Empresa', new_empresa_path %>
