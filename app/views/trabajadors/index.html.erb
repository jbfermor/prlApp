<p id="notice"><%= notice %></p>

<h1>Trabajadors</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Puesto</th>
      <th>Embarazo</th>
      <th>Lactante</th>
      <th>Sensible</th>
      <th>Discapacidad</th>
      <th>Menor</th>
      <th>Fecha alta</th>
      <th>Fecha baja</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajadors.each do |trabajador| %>
      <tr>
        <td><%= trabajador.nombre %></td>
        <td><%= trabajador.apellidos %></td>
        <td><%= trabajador.puesto %></td>
        <td><%= trabajador.embarazo %></td>
        <td><%= trabajador.lactante %></td>
        <td><%= trabajador.sensible %></td>
        <td><%= trabajador.discapacidad %></td>
        <td><%= trabajador.menor %></td>
        <td><%= trabajador.fecha_alta %></td>
        <td><%= trabajador.fecha_baja %></td>
        <td><%= link_to 'Show', trabajador %></td>
        <td><%= link_to 'Edit', edit_trabajador_path(trabajador) %></td>
        <td><%= link_to 'Destroy', trabajador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

