
<p>
  <strong>Nombre:</strong>
  <%= @trabajador.nombre %>
</p>

<p>
  <strong>Apellidos:</strong>
  <%= @trabajador.apellidos %>
</p>

<p>
  <strong>Puesto:</strong>
  <%= @trabajador.puesto %>
</p>

<p>
  <strong>Embarazo:</strong>
  <%= @trabajador.embarazo %>
</p>

<p>
  <strong>Lactante:</strong>
  <%= @trabajador.lactante %>
</p>

<p>
  <strong>Sensible:</strong>
  <%= @trabajador.sensible %>
</p>

<p>
  <strong>Discapacidad:</strong>
  <%= @trabajador.discapacidad %>
</p>

<p>
  <strong>Menor:</strong>
  <%= @trabajador.menor %>
</p>

<% if @trabajador.activo == 1 %>
	<p>
	  <strong>Fecha alta:</strong>
	  <%= Time.at(@trabajador.fecha_alta).strftime("%d/%m/%Y") %>
	</p>
	<div class="row">
		<%= link_to "Dar de baja", dar_baja_trabajador_path(@trabajador),
		 class: "btn btn-warning text-white" %>
	</div>
<% else %>
	<p>
		<strong>Fecha alta:</strong>
		<%= Time.at(@trabajador.fecha_alta).strftime("%d/%m/%Y") %>
	</p>
	<% if @trabajador.fecha_baja != nil %>
		<p>
	  	<strong>Fecha baja:</strong>
			<%= Time.at(@trabajador.fecha_baja).strftime("%d/%m/%Y") %>
		</p>
		<div class="row">
			<%= link_to "Dar de alta", dar_alta_trabajador_path(@trabajador),
			 class: "btn btn-secondary text-white" %>
		</div>
	<% end %>
<% end %>

<%= link_to 'Edit', edit_trabajador_path(@trabajador) %> |
