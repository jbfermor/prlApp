<div class="row">
	<h1>Centros</h1>
</div>

<div class="row">
	<table>
	  <thead>
	    <tr>
	      <th>Nombre</th>
	      <th>Poblacion</th>
				<th>Empresa</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @centros.each do |centro| %>
	      <tr>
	        <td><%= centro.nombre %></td>
	        <td><%= centro.poblacion %></td>
					<td><%= @empresa.razon_social %></td>
	        <td><%= link_to mi.visibility.style("color: blue"), centro,
					  title: "Mostrar" %></td>
	        <td><%= link_to mi.settings.style("color: rgb(255,165,0);") ,
					  edit_centro_path(centro), title: "Editar" %></td>
	        <td><%= link_to mi.delete.style("color: red"), centro,
					  method: :delete, data: { confirm: 'Â¿Seguro?' },
						title: "Eliminar" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>

</div>

<div class="row">
	<%= link_to "Volver a #{@empresa.razon_social}", @empresa, class: "btn btn-danger" %>
</div>
