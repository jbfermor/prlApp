<div class="row">
		<h2>Lista de trabajadores</h2>
</div>

<div class="row">
	<table>
		<thead>
			<tr>
				<th>Nombre y apellidos</th>
				<th>Puesto</th>
				<th>Centro</th>
				<th colspan="3">Acciones</th>
			</tr>
		</thead>
		<tbody>
			<% @t_activos.each do |t| %>
				<tr>
					<td><%= t.nombre %> <%= t.apellidos %></td>
					<td><%= t.puesto %></td>
					<td><%= t.centro.nombre %></td>
					<td><%= link_to mi.visibility.style("color: blue"), trabajador_path(t),
					  title: "Mostrar" %></td>
					<td><%= link_to mi.settings.style("color: rgb(255,165,0);"),
					  edit_trabajador_path(t), title: "Editar" %></td>
					<td><%= link_to mi.block.style("color: red;"),
						dar_baja_trabajador_path(t), :title => "Dar de baja" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

<div class="row my-3">
	<a class="btn btn-dark" data-bs-toggle="collapse" href="#collapseTrabajador"
	 role="button" aria-expanded="false" aria-controls="collapseTrabajador">
    Mostrar Trabajadores inactivos
  </a>
	<div class="collapse" id="collapseTrabajador">
	  <div class="card card-body">
			<table>
				<thead>
					<tr>
						<th>Nombre y apellidos</th>
						<th>Puesto</th>
						<th>Centro</th>
						<th colspan="3">Acciones</th>
					</tr>
				</thead>
				<tbody>
					<% @t_inactivos.each do |t| %>
						<tr>
							<td><%= t.nombre %> <%= t.apellidos %></td>
							<td><%= t.puesto %></td>
							<td><%= t.centro.nombre %></td>
							<td><%= link_to mi.visibility.style("color: blue"), trabajador_path(t),
							  title: "Mostrar" %></td>
							<td><%= link_to mi.settings.style("color: rgb(255,165,0);"),
							  edit_trabajador_path(t), title: "Editar" %></td>
							<td><%= link_to mi.redo.style("color: green;"),
								dar_alta_trabajador_path(t), :title => "Dar de alta" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
	  </div>
	</div>
</div>

<div class="row">
	<%= link_to "Dar de alta nuevo trabajador",
	 new_centro_trabajador_path(@centro),	class: "btn btn-success" %>
</div>
